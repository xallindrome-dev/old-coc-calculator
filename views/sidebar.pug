extends layout.pug

block sidebar
    nav.col-md-3.d-none.d-md-block.bg-light.sidebar
        .sidebar-sticky
            ul.nav.flex-column
            li.nav-item
                h5.ml-3
                | Variables
            form.px-3
            .row
                .form-group.col
                label(for='startDate') Start Date
                input#startDate.form-control(type='datetime-local')
            .row
                .form-group.col
                label(for='gold') Starting Gold
                input#gold.form-control(type='number')
                .form-group.col
                label(for='elixer') Starting Elixer
                input#elixer.form-control(type='number')
            .row
                .form-group.col
                label(for='gRate') Gold Rate
                input#gRate.form-control(type='number')
                .form-group.col
                label(for='eRate') Elixer Rate
                input#eRate.form-control(type='number')
                .form-group.col
                label(for='gemRate') Gem Rate
                input#gemRate.form-control(type='number', step="0.01")
            .row
                .form-group.col-4
                label(for='mines') Mines
                input#mines.form-control(type='number')
                .form-group.col-8
                label(for='dailyBonus') Daily Bonus
                input#dailyBonus.form-control(type='number')
            .row
                .form-group.col
                label(for='maxGold') Max Gold
                input#maxGold.form-control(type='number')
                .form-group.col
                label(for='maxElixer') Max Elixer
                input#maxElixer.form-control(type='number')
            .row
                .form-group.col
                label(for='maxGem') Max Gem
                input#maxGem.form-control(type='number')
            h5.ml-3 Build Order
            ul.list-group.sortable.w-100.mt-3.px-3