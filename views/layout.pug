html(lang="en")
  head
    title= title
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(http-equiv="X-UA-Compatible", content="ie=edge")
    link(rel="stylesheet", href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css", integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T", crossorigin="anonymous")
    link(rel="stylesheet", href="assets/fontawesome/css/all.min.css")
    link(rel="stylesheet", href="css/styles.css")
  body
    main
      nav(class="navbar navbar-dark fixed-top bg-dark flex-md-nowrap p-0 shadow")
        a(class="navbar-brand col-sm-3 col-md-2 mr-0", href="#")= title
      div(class="container-fluid")
        div(class="row")
          div(class="col-3")
            nav.col-md-3.d-none.d-md-block.bg-light.sidebar.collapse.in#sidebar
              .sidebar-sticky
                .list-group.panel
                  a.list-group-item.collapsed(href="#variables", data-toggle="collapse", data-parent="#sidebar", aria-expanded="false")
                    h5.ml-3
                      | Variables
                  form.px-3.collapse#variables
                    .row
                      .form-group.col
                        label(for='startDate') Start Date
                        input#startDate.form-control(type='datetime-local')
                    .row
                      .form-group.col
                        label(for='gold') Starting Gold
                        input#gold.form-control(type='number')
                      .form-group.col
                        label(for='elixer') Starting Elixer
                        input#elixer.form-control(type='number')
                    .row
                      .form-group.col
                        label(for='gRate') Gold Rate
                        input#gRate.form-control(type='number')
                      .form-group.col
                        label(for='eRate') Elixer Rate
                        input#eRate.form-control(type='number')
                      .form-group.col
                        label(for='gemRate') Gem Rate
                        input#gemRate.form-control(type='number', step="0.01")
                    .row
                      .form-group.col-4
                        label(for='mines') Mines
                        input#mines.form-control(type='number')
                      .form-group.col-8
                        label(for='dailyBonus') Daily Bonus
                        input#dailyBonus.form-control(type='number')
                    .row
                      .form-group.col
                        label(for='maxGold') Max Gold
                        input#maxGold.form-control(type='number')
                      .form-group.col
                        label(for='maxElixer') Max Elixer
                        input#maxElixer.form-control(type='number')
                    .row
                      .form-group.col
                        label(for='maxGem') Max Gem
                        input#maxGem.form-control(type='number')

                  a.list-group-item.collapsed(href="#createBuild", data-toggle="collapse", data-parent="#sidebar", aria-expanded="false")
                    h5.ml-3
                      | Create Build Item
                  form.px-3.collapse#createBuild
                    .row
                      .form-group.col
                        label(for='name') Name
                        input#name.form-control(type='text')
                      .form-group.col
                        label(for='level') Level
                        input#level.form-control(type='number')
                    .row
                      .form-group.col
                        label(for='resource') Resource
                        input#resource.form-control(type='text')                    
                      .form-group.col
                        label(for='cost') Cost
                        input#cost.form-control(type='number')
                      .form-group.col
                        label(for='time') Time (in hours)
                        input#time.form-control(type='number')
                    .row
                      .col-12
                        h5 Outcomes
                      .form-group.col-8
                        label(for='changeName') Name
                        input#changeName.form-control(type='number')
                      .form-group.col-4
                        label(for='change') Change
                        input#change.form-control(type='number')
                    .row
                      .form-group.col
                        label(for='amount') Amount
                        input#amount.form-control(type='number')
                    .row
                      .form-group.col
                        button#addBuildItem.btn.btn-primary.float-right
                          | Add Build Item
                  .clearfix
                  a.list-group-item.collapsed(href="#buildOrder", data-toggle="collapse", data-parent="#sidebar", aria-expanded="false")
                    h5.ml-3
                      | Build Order
                  ul.list-group.sortable.w-100.mt-3.px-3.collapse#buildOrder
          div(class="col-9")
            block content

    script(src="https://code.jquery.com/jquery-3.4.1.min.js", integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo=", crossorigin="anonymous")
    script(src='https://code.jquery.com/ui/1.12.1/jquery-ui.min.js', integrity='sha256-VazP97ZCwtekAsvgPBSUwPFKdrwD3unUfSGVYrahUqU=', crossorigin='anonymous')
    script(src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js", integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1", crossorigin="anonymous")
    script(src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js", integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM", crossorigin="anonymous")
    script(src='https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.8.0/Chart.bundle.min.js', integrity='sha256-xKeoJ50pzbUGkpQxDYHD7o7hxe0LaOGeguUidbq6vis=', crossorigin='anonymous')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.24.0/moment.min.js', integrity='sha256-4iQZ6BVL4qNKlQ27TExEhBN1HFPvAvAMbFavKKosSWQ=', crossorigin='anonymous')
    script(src="scripts/calculate.js")